@{ 
    string adminname =Convert.ToString( Session["AdminName"]);
    int adminid = Convert.ToInt32(Session["AdminId"]);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <style>
        * {
            margin: 0%;
            padding: 0%;
        }

        .navbardiv {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            background-color: #333;
            padding: 40px;
            height: 30px;
        }

        #logoutbtn {
            height: 30px;
            width: 70px;
            border-radius: 5px;
            background-color: #fc5087;
            color: white;
            border: none;
            outline: none;
        }

        #adminName {
            color: white;
            font-size: 20px;
            font-weight: 600;
        }

        .pannel {
            width: 100%;
            
            display: flex;
            flex-direction: row;
            height: 100vh;
        }

        .sidebar {
            width: 22%;
            background-color: #0E0D26;
            display: flex;
            flex-direction: column;
            padding: 1%;
            height:100%;
        }
     
        .sidebarBtn {
            height: 50px;
            border: 0;
            border-bottom: 2px solid black;
            padding: 0%;
            color: black;
            font-weight: 600;
            background-color: white;
            margin-top: 5px;
            width:100%;
        }

            .sidebarBtn:hover {
                color: #fc5087;
                border-bottom: 2px solid #fc5087;
            }

        .mainPannel {
            width: 78%;
            background-color: whitesmoke;
            overflow:scroll;
         /*   display: flex;
            flex-direction: row;
            justify-content: space-evenly;*/
        }
        table{
            width:100%;
            height:auto;

        }
        .wrapper{
            height:100%;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <nav class="navbarr">
            <div class="navbardiv">
                <div>
                    <p id="adminName"> Welcome | @adminname <span></span></span></p>
                </div>
                <div>
                    <a href="@Url.Action("Logout","Admin")"><button id="logoutbtn">Logout</button></a>
                </div>
            </div>
        </nav>
        <div class="pannel">
            <div class="sidebar">
              <a href="@Url.Action("AdminDashboardPage","Admin")"><button id="dashboard" class="sidebarBtn">Dashboard</button></a>  
                <a href="@Url.Action("Property","Admin")"><button id="properties" class="sidebarBtn">Properties</button></a>

                <a href="@Url.Action("Events","Admin")"><button id="events" class="sidebarBtn">Events</button></a>
                <a href="@Url.Action("BookingDetails","Admin")"><button id="bookings" class="sidebarBtn">Bookings</button></a>
                <a href="@Url.Action("Users","Admin")"><button id="users" class="sidebarBtn">Users</button></a>
                <a href="@Url.Action("EditAdminDetailsview","Admin", new {@id=adminid})"><button class="sidebarBtn" >Change Details</button></a>
                <a href="@Url.Action("AddNewAdmin","Admin")"><button class="sidebarBtn">Add New Admin</button></a>
                <a href="@Url.Action("ShowAdminDetails","Admin")"><button class="sidebarBtn">View All Admin(s)</button></a>

            </div>
            <div class="mainPannel">
                @RenderBody()
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#inputarea").on("keydown", function () {
                var inpval = $(this).val();

                $(".table tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(inpval) > -1)
                })
            })
        })
    </script>
</body>
</html>
