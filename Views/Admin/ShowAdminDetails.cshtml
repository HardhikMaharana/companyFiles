@model List<ManagementWebApp.Models.AdminModels>
@{
    ViewBag.Title = "ShowAdminDetails";
    Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";
}

<h2>ShowAdminDetails</h2>

<table class="table table-hover">
    <tr>
        <th>
            Admin Id
        </th>
        <th>
            Admin Name
        </th>
        <th>
            Admin MailID
        </th>
        <th>
            Admin PhoneNo
        </th>
        <th>
          Operations
        </th>
    </tr>
    <tbody>
       @foreach(var i in Model)
        {
            <tr>
                <td>
                    @i.id
                </td>
                <td>
                    @i.AdminName
                </td>
                <td>
                    @i.MailId
                </td>
                <td>
                    @i.PhoneNo
                </td>
                <td>
                    <a href="@Url.Action("DeleteAdmin", "Admin", new {@id=i.id} )">Delete</a> 
                </td>
            </tr>
        }

    </tbody>
</table>

