<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <style>
        * {
            margin: 0%;
            padding: 0%;
            font-family: 'Nunito', sans-serif;
        }

        .navardivl {
            background-color: #363644;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            padding: 13px;
        }

        .navinnerdiv2 {
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;
            align-items: center;
            width: 20%;
        }

        #location {
            border: none;
            font-size: 15px;
            font-weight: 500;
            color: white;
            background-color: #363644;
        }

        option {
            background-color: #363644;
        }

        #Logout {
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            background-color: #fc5087;
            color: white;
            border: none;
            outline: none;
        }

        .catagorynavdiv li {
            list-style-type: none;
            display: inline;
            margin: 1%;
            color: white;
            float: left;
        }

        .catagorynavdiv {
            background-color: #1e1d34;
            padding: 15px;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            position: relative;
        }

            .catagorynavdiv div {
                width: 50%;
            }

        catagorynavdiv ul li:hover {
            cursor: pointer;
        }

        .user-data {
            width: 40px;
            height: 40px;
            background-color: #fc5087;
            border: none;
            outline: none;
            border-radius: 5px;
            float: right;
        }

            .user-data img {
                width: 100%;
            }

        .userdetails {
            z-index: 9999;
            position: absolute;
            width: 18% !important;
            left: 78%;
            top: 70%;
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            height: auto;
            color: white;
            background-color: #1f2533;
            padding: 2%;
        }

            .userdetails button {
                width: 100%;
                padding: 10px 0px 10px 0px;
                border: none;
                outline: none;
                border-bottom: 1px solid grey;
                margin-top: 15px;
                color: black;
            }

        a {
            text-decoration: none;
            color: black;
        }

        footer {
            background-color: black;
            color: white;
            text-align: center;
            font-weight: 600;
            bottom: 0;
            padding: 2%;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>*@


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet">

</head>
<body>
    <nav>

        <div class="navardivl">
            <div style="margin-left: 1%;">
                <a href="@Url.Action("UserLoginValidation","WebpageHome")"><h2 style="color :white">Book<span style="color :#fc5087">My</span>Event</h2></a>
            </div>
            <div class="navinnerdiv2">
                <select name="location" id="location">
                    <option value="null">Location</option>
                    <option value="bhubaneshwar">Bhubaneshwar</option>
                    <option value="cuttack">Cuttack</option>
                    <option value="rourkela">Rourkela</option>
                </select>

                <span style="color: #626262;font-weight: 600;font-size: 30px;"> | </span>

                <button id="Logout"><a href="@Url.Action("UserLogout","WebpageHome")">Logout</a></button>
            </div>
        </div>
    </nav>

    <nav>

        <div class="catagorynavdiv">
            <div style="width:50%">

                <ul>
                    <li id="movie">Movies</li>
                    <li id="events">Events</li>
                    <li id="sports">Sports</li>
                </ul>
            </div>

            <div style="width: 50%; text-align: right; display: flex; justify-content: right; ">
                <h4 style="display:inline;color:white"><span style="color: #fc5087">Welcome </span>@username | </h4>
                <button class="user-data">
                    <img src="~/Images/menu-bar.png" />
                </button>


            </div>
            <div class="userdetails" hidden>

                <h4><span style="color: #fc5087">Hello </span>@username</h4>
                <a href="@Url.Action("showBookingDetails","WebpageHome",new{@id = @userid})"><button id="@userid">Your Bookings</button></a>
                @*<button id="@userid" data-bs-toggle="modal" data-bs-target="#myModal">Edit Details</button>*@

            </div>
        </div>

    </nav>
   
    <div>
        @RenderBody()
    </div>
    <footer>
        <p>©Hardhik Maharana 2023</p>
    </footer>

    @RenderSection("scripts", false)
    <script>
            $(document).ready(function () {
                console.log(@userid)
            $(".user-data").click(function () {
                $(".userdetails").toggle(1000);

            })

        })
    </script>
</body>

</html>

