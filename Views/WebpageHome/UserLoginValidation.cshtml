<style>
    .item, img {
        height: 100% !important;
        width: 100% !important;
    }

    .banner {
        padding: 1%;
        text-align: center;
        height: 60%;
    }

    .carddiv {
        width: 100%;
        height: 90%;
        display: flex;
        flex-direction: row;
        align-items: start;
        justify-content: space-evenly;
    }

    .cards {
        width: 20%;
        height: 90%;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
    }

        .cards img {
            border-radius: 10px;
            height:100%;
            
        }


    .cardssection {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        height: 100vh;
    }

    .eventssection {
        background-color: #282740;
    }

    .carousel-inner {
        height: 70vh;
    }

    h4 {
        font-weight: 600;
    }

    .title {
        height: 10%;
    }

    a, a:hover {
        text-decoration: none;
        color: black;
    }
   
  
</style>
<div class="wrapper">


    <div class="banner">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/Book Events.gif" alt="">
